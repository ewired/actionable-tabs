{
    "manifest_version": 3,
    "name": "Actionable Tabs",
    "version": "1.1.1",
    "description": "Mark tabs as actionable and automatically bring them to the top on a schedule. Perfect for managing tasks, reminders, and important tabs.",
    "permissions": [
        "tabs",
        "contextMenus",
        "storage",
        "alarms",
        "notifications",
        "sessions"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "action": {
        "default_icon": {
            "16": "icons/icon-16-dark-on-light.png",
            "32": "icons/icon-32-dark-on-light.png",
            "48": "icons/icon-48-dark-on-light.png",
            "128": "icons/icon-128-dark-on-light.png"
        },
        "theme_icons": [
            {
                "dark": "icons/icon-16-dark-on-light.png",
                "light": "icons/icon-16-light-on-dark.png",
                "size": 16
            },
            {
                "dark": "icons/icon-32-dark-on-light.png",
                "light": "icons/icon-32-light-on-dark.png",
                "size": 32
            },
            {
                "dark": "icons/icon-48-dark-on-light.png",
                "light": "icons/icon-48-light-on-dark.png",
                "size": 48
            },
            {
                "dark": "icons/icon-128-dark-on-light.png",
                "light": "icons/icon-128-light-on-dark.png",
                "size": 128
            }
        ],
        "default_title": "Actionable Tabs"
    },
    "options_ui": {
        "page": "settings/settings.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "icons/icon-16-dark-on-light.png",
        "32": "icons/icon-32-dark-on-light.png",
        "48": "icons/icon-48-dark-on-light.png",
        "128": "icons/icon-128-dark-on-light.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "actionable-tabs@example.com",
            "strict_min_version": "109.0"
        }
    }
}
