{
  "manifest_version": 3,
  "name": "Actionable Tabs",
  "version": "1.0.0",
  "description": "Manage and organize browser tabs with context menu actions",
  
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Actionable Tabs"
  },
  
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": false
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "actionable-tabs@example.com",
      "strict_min_version": "109.0"
    }
  }
}